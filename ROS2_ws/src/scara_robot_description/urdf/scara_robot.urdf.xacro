<?xml version="1.0" encoding="UTF-8"?>
<robot name="scara_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="gripper_type" default="tayo"/>
	<xacro:property name="gripper_type" value="$(arg gripper_type)" />
	<xacro:property name="scale_value" value="100.0"/>
  <!--link-->
  <link name="base_link"/>
  <link name="link1">
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.25}"/>
      <geometry>
        <cylinder length="${scale_value*0.5}" radius="${scale_value*0.03}"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.25}"/>
      <geometry>
        <cylinder length="${scale_value*0.5}" radius="${scale_value*0.03}"/>
      </geometry>
      <material name="material_color_link1">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    
  </link>
  <link name="link2">
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.125}"/>
      <geometry>
        <cylinder length="${scale_value*0.25}" radius="${scale_value*0.03}"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.125}"/>
      <geometry>
        <cylinder length="${scale_value*0.25}" radius="${scale_value*0.03}"/>
      </geometry>
      <material name="material_color_link2">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    
  </link>
  <link name="link3">
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.125}"/>
      <geometry>
        <cylinder length="${scale_value*0.25}" radius="${scale_value*0.03}"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.125}"/>
      <geometry>
        <cylinder length="${scale_value*0.25}" radius="${scale_value*0.03}"/>
      </geometry>
      <material name="material_color_link3">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    
  </link>
  <link name="link4">
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.15}"/>
      <geometry>
        <cylinder length="${scale_value*0.3}" radius="${scale_value*0.03}"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.15}"/>
      <geometry>
        <cylinder length="${scale_value*0.3}" radius="${scale_value*0.03}"/>
      </geometry>
      <material name="material_color_link4">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    
  </link>
  <link name="link5">
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.005}"/>
      <geometry>
        <cylinder length="${scale_value*0.01}" radius="${scale_value*0.03}"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.005}"/>
      <geometry>
        <cylinder length="${scale_value*0.01}" radius="${scale_value*0.03}"/>
      </geometry>
      <material name="material_color_link5">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    
    </link>
    <link name="tool0"/>
  <!--joint-->
  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>
  <joint name="joint1" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin rpy="0 1.57079632679 0" xyz="0.0 0.0 ${scale_value*0.5}"/>
    <limit effort="10" lower="-3.14159265359" upper="3.14159265359" velocity="18.8495559215"/>
  </joint>
  <joint name="joint2" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin rpy="0 0 0" xyz="${scale_value*-0.06} 0.0 ${scale_value*0.19}"/>
    <limit effort="10" lower="-3.14159265359" upper="3.14159265359" velocity="18.8495559215"/>
  </joint>
  <joint name="joint3" type="prismatic">
    <parent link="link3"/>
    <child link="link4"/>
    <origin rpy="0 1.57079632679 0" xyz="${scale_value*-0.15} 0.0 ${scale_value*0.25}"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" lower="${scale_value*-0.15}" upper="${scale_value*0.15}" velocity="1.1"/>
  </joint>
  <joint name="joint4" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 ${scale_value*0.3}"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-6.28318530718" upper="6.28318530718" velocity="18.8495559215"/>
  </joint>
  <joint name="tool_joint" type="fixed">
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.01"/>
    <parent link="link5"/>
    <child link="tool0"/>
  </joint>
  <xacro:if value="${gripper_type != 'none'}">
		<xacro:include filename="$(find scara_robot_description)/urdf/${gripper_type}.urdf.xacro" />
	</xacro:if>
</robot>
